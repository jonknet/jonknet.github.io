@using System.ComponentModel.DataAnnotations
@inherits Field

<div id=@Uid class="tb-field @CssClass"
     ondragover="event.preventDefault()"
     @ondrop:stopPropagation
     @ondrop="HandleOnDrop">

    <CascadingValue Value=this>
            @foreach(var item in Items)
            {
                <IntegrationNode Uid=@item.Uid Title=@item.Title Items=@item.Items Nodes=@item.Nodes SaveToLocalStorageCallback=@this.SaveToLocalStorageCallback Parent=@this @key="item" @ref="intNodeRefs[item.Uid]"></IntegrationNode>
            }
    </CascadingValue>

</div>