@inherits IntegrationField

<div draggable="true" class="tb-item tb-draggable @CssClass @CssSelect"
     ondragover="event.preventDefault()"
     @ondragstart:stopPropagation
     @ondragstart="@(() => HandleOnDragStart(this))"
     @ondragend="HandleOnDragEnd"
     @ondrop:stopPropagation
     @ondrop="HandleOnDrop">
        
    @Title

    <br/>

    <div class="tb-flex">
            <div>
                <InterfaceSlot Position=@InterfacePosition.Left Parent=@this></InterfaceSlot>
            </div>
            <div class="flex-column">
                   
                <InterfaceSlot Position=@InterfacePosition.RightTop Parent=@this></InterfaceSlot>
                
                <InterfaceSlot Position=@InterfacePosition.RightMiddle Parent=@this></InterfaceSlot>
                
                <InterfaceSlot Position=@InterfacePosition.RightBottom Parent=@this></InterfaceSlot>
                
            </div>
        </div>
        <div class="flex-column">
            
            @foreach (IntegrationNode node in IntegrationNodes) {
                <IntegrationNode Guid=@node.Guid IntegrationNodes=@node.IntegrationNodes Interfaces=@node.Interfaces Parent=@this @key=@node.Guid></IntegrationNode>
            }
            
        </div>
    
</div>