@inherits Group

<div id="IntegrationField" class="tb-field @CssClass"
     ondragover="event.preventDefault()"
     @ondrop:stopPropagation
     @ondrop="HandleOnDrop">

    <CascadingValue Value="this" Name="Field">
        @foreach (var item in Storage.IntegrationField.GroupItems.Cast<IntegrationNode>()) {
            <IntegrationNode Guid=@item.Guid 
                             DomId=@item.DomId 
                             Title=@item.Title 
                             GroupItems=@item.GroupItems 
                             Interfaces=@item.Interfaces 
                             Parent=@item.Parent 
                             @key=@item.Guid 
                             CssClass=@item.CssClass></IntegrationNode>
            
        }
        <br/>
        <br/>
    </CascadingValue>
</div>